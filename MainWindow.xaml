<Window x:Class="BankingApp.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankingApp.GUI"
        mc:Ignorable="d"
        Title="Wednesday Bank" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF86EEF5"/>
                <GradientStop Color="#FF6152F9" Offset="1"/>
                <GradientStop Color="#FFB344FB" Offset="0.487"/>
            </LinearGradientBrush>
        </Grid.Background>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Welcome to Wednesday Bank" FontSize="24" Margin="25" HorizontalAlignment="Center" Foreground="Black" FontWeight="Bold" FontFamily="Arial" Opacity="0.85"/>
            <Button Content="Sign In" Width="200" Height ="45" Margin="10" Click="SignIn_ButtonClick" BorderBrush="#330E41FB" BorderThickness="2,2,2,2" />

            <Button Content="Sign Up" Width="200" Height ="45" Margin="10" Click="SignUp_ButtonClick" BorderBrush="#330E41FB" BorderThickness="2,2,2,2"/>
        </StackPanel>
    </Grid>
</Window>
